generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int      @id @default(autoincrement())
  nombre        String
  apellido      String
  creadoEl      DateTime @default(now())
  actualizadoEl DateTime @updatedAt
}

model Auto {
  id          Int      @id @default(autoincrement())
  modelo      String
  marca       String
  transmision String
  consumo     String
  tipoAuto    String
  color       String
  anio        DateTime
  tarifa      Float
  kilometraje Int
  placa       String
  descripcion String
  disponible  String
  ubicacion   String   @default("Cochabamba")
}
